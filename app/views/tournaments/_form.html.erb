<%= form_with(model: tournament, local: true) do |form| %>
    <% if tournament.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(tournament.errors.count, "error") %> prohibited this tournament from being saved:</h2>

          <ul>
            <% tournament.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="form-group">
      <div class="mdl-textfield mdl-js-textfield">
        <%= form.text_field :name, id: :tournament_name, class: "mdl-textfield__input form-control" %>
        <%= form.label :name, class: "mdl-textfield__label"%>
        <span class="mdl-textfield__error"><%= tournament.errors[:name]%></span>
      </div>
    </div>

    <div class="form-group">
      <div class="mdl-textfield mdl-js-textfield">
        <%= form.select :tournament_type_id, TournamentType.pluck(:name,:id), {prompt: "Тип турнира"},
                        id: :tournament_type_id,
                        class: "mdl-textfield__input form-control"%>
        <span class="mdl-textfield__error"><%= tournament.errors[:tournament_type_id]%></span>
      </div>
    </div>

    <div class="form-group">
      <div class="mdl-textfield mdl-js-textfield">
        <%= form.datetime_select :start_at, id: :tournament_start_at, class: "mdl-textfield__input form-control" %>
      </div>
    </div>

    <div class="actions">
      <%= form.submit 'Создать', class: "mdl-button mdl-js-button mdl-button--raised mdl-button--accent" %>
    </div>
<% end %>
