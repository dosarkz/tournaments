<p id="notice"><%= notice %></p>

<h1>Tournament Types</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tournament_types.each do |tournament_type| %>
      <tr>
        <td><%= tournament_type.name %></td>
        <td><%= link_to 'Show', tournament_type %></td>
        <td><%= link_to 'Edit', edit_tournament_type_path(tournament_type) %></td>
        <td><%= link_to 'Destroy', tournament_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

